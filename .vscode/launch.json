{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "windows": {
                "program": "${workspaceFolder}\\Shadow.exe"
            },
            "osx": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/local/Cellar/gdb/12.1/bin/gdb",
                "program": "${workspaceFolder}/Shadow"
            },
            "linux": {
                "program": "${workspaceFolder}/Shadow"
            }
        },
        {
            "name": "Build",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "windows": {
                "program": "${workspaceFolder}\\Shadow.exe",
                "preLaunchTask": "Win64: Make Shadow.exe"
            },
            "osx": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/local/Cellar/gdb/12.1/bin/gdb",
                "program": "${workspaceFolder}/Shadow",
                "preLaunchTask": "MacOS: Make Shadow"
            },
            "linux": {
                "program": "${workspaceFolder}/Shadow"
            }
        }
    ]
}